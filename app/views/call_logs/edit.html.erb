<% current_user = session[:current_user_id] %>
<h1>Editing call_log</h1>

<%# form_for(@call_log) do |f| %>
<% form_for (@call_log, :url => '/users/' + current_user.to_s + '/call_logs/' + @call_log.id.to_s) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :from %><br />
    <%= f.text_field :from %>
  </p>
  <p>
    <%= f.label :to %><br />
    <%= f.text_field :to %>
  </p>
  <p>
    <%= f.label :nature %><br />
    <%= f.text_field :nature %>
  </p>
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @call_log %> |
<%= link_to 'Back', call_logs_path %>