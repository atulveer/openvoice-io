<% current_user = session[:current_user_id] %>
<h1>your call log</h1>

<table>
  <tr><thead>
    <th>From</th>
    <th>To</th>
    <th>Nature</th>
    <th>User</th>
	<th colspan="3">&nbsp;</th>
</thead>
  </tr>

<% if @call_logs %>
<% @call_logs.each do |call_log| %>
  <tr>
    <td><%=h call_log.from %></td>
    <td><%=h call_log.to %></td>
    <td><%=h call_log.nature %></td>
    <td><%=h call_log.user_id %></td>
    <td><%= link_to 'Call', new_user_voice_call_path(current_user, { :to => call_log.from }) %></td>
    <td><%= link_to 'Show', user_call_log_path(current_user, call_log) %></td>
    <td><%= link_to 'Destroy', user_call_log_path(current_user, call_log), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<% end %>
</table>