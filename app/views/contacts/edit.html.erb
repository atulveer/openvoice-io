<% current_user = session[:current_user_id] %>
<h1>Editing contact</h1>

<% form_for (@contact) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :contactname %>
  </p>
  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :im %><br />
    <%= f.text_field :im %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', contact_path(@contact) %> |
<%= link_to 'Back', contacts_path %>