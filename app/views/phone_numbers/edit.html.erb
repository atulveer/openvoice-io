<% current_user = session[:current_user_id] %>
<h1>Editing phone_number</h1>

<%# form_for([:user, @phone_number]) do |f| %>
<% form_for (@phone_number, :url => '/users/' + current_user.to_s + '/phone_numbers/' + @phone_number.id.to_s) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :forward %>
    <%= f.check_box :forward %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', user_phone_number_path(current_user, @phone_number) %> |
<%= link_to 'Back', user_phone_numbers_path(current_user) %>