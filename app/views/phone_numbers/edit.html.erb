<% current_user = session[:current_user_id] %>
<h1>Editing phone_number</h1>

<% form_for([@phone_number]) do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :forward %>
    <%= f.check_box :forward %>
  </p>
  <p>
    <%= f.label 'Can this phone number receive SMS?' %>
    <%= f.check_box :smscapable %><br />
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', phone_number_path(@phone_number) %> |
<%= link_to 'Back', phone_numbers_path %>