<% current_user = session[:current_user_id] %>
<h1>New Phone Number</h1>

<% form_for([ @phone_number]) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :number %><br/>
      <%= f.text_field :number %>
    </p>
    <p>
      <%= f.label :description %><br/>
      <%= f.text_field :description %>
    </p>

    <p>
      <%= f.label :forward %>
      <%= f.check_box :forward %><br />
    </p>

    <p>
      <%= f.submit 'Create' %>
    </p>
<% end %>

<%= link_to 'Back', phone_numbers_path %>