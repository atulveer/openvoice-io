<% current_user = session[:current_user_id] %>
<p>
  <b>Number:</b>
  <%=h @phone_number.number %>
  <br />
  <b>Forward:</b>
  <%=h @phone_number.forward %>
  <br />
  <b>User:</b>
	<% user = User.first(:id => @phone_number.user_id) %>
	<% if user %>
  		<%=h user.email %>
	<% end %>

</p>


<%= link_to 'Edit', edit_user_phone_number_path(current_user, @phone_number) %> |
<%= link_to 'Back', user_phone_numbers_path(current_user) %>