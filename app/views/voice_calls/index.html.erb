<% current_user = session[:current_user_id] %>
<h1>Your Voice Calls</h1>

<table>
  <tr>
<thead>    <th>To</th>
    <th>Time</th>
<th colspan="3">&nbsp;</th>
</thead>  </tr>

<% @voice_calls.each do |voice_call| %>
  <tr>
    <td><%=h voice_call.to %></td>
    <td><%=h voice_call.created_at %></td>
    <td><%= link_to 'Call', new_voice_call_path({ :to => voice_call.to }) %></td>
    <td><%= link_to 'Show', voice_call_path(voice_call) %></td>
    <td><%= link_to 'Delete', voice_call_path(voice_call), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<p>
<% @page = params[:page] %>
<% if @page.nil?  %>
<% @page = 1 %>
<% end %>

<% if @page = 1 and @voice_calls.paginator.page_count.to_i > 1 %>
<%= @voice_calls.paginator.page %>
| <%= link_to 'First Page', '/voice_calls?page=1' %> 
<% end %>

<% if @page.to_i > 1 %>
 | <%= link_to '<< Previous Page', '/voice_calls?page=' + (@voice_calls.paginator.page - 1).to_s %> 
<% end %>

<% if @page.to_i < @voice_calls.paginator.page_count %>
 | <%= link_to 'Next Page >>', '/voice_calls?page=' + (@voice_calls.paginator.page + 1).to_s %> 
<% end %>

<% if @page.to_i != @voice_calls.paginator.page_count  and @voice_calls.paginator.page_count.to_i > 1%>
 | <%= link_to 'Last Page', '/voice_calls?page=' + @voice_calls.paginator.page_count.to_s %> 
<% end %>
</p>

<%= link_to 'new voice call', new_voice_call_path %>