<% current_user = session[:current_user_id] %>
<h1>Your Voice Mails</h1>

<table>
  <tr>
<thead>    
	<th>From</th>
    <!-- <th>Text</th> -->
    <th>Message</th>
    <th>Time</th>
<th colspan="1">&nbsp;</th>
</thead>  </tr>

<% if @voicemails %>
<% @voicemails.each do |voicemail| %>
  <tr>
    <td><%=h voicemail.from %></td>
    <!-- <td><%=h voicemail.text %></td> -->
    <td><%# voicemail.data %><!-- <embed src="http://localhost:8080/play/<%=voicemail.id%>.mp3" height="15" width="144" controls="smallconsole" volume="50" autostart="false"> -->
	  <script language="JavaScript" src="/mp3s/audio-player.js"></script>
	        <object type="application/x-shockwave-flash" data="/mp3s/player.swf" id="audioplayer1" height="24" width="290">
	        <param name="movie" value="/mp3s/player.swf">
	        <param name="FlashVars" value="playerID=1&amp;soundFile=/play/<%=voicemail.id%>.mp3">
	        <param name="quality" value="high">
	        <param name="menu" value="false">
	        <param name="wmode" value="transparent">
	        </object>
    
	</td>
    <td><%=h voicemail.created_at %></td>
    <!-- <td><%# link_to 'Show', voicemail_path( voicemail) %></td> -->
    <td><%= link_to 'Delete', voicemail_path(voicemail), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<% end %>
</table>

<p>
<% @page = params[:page] %>
<% if @page.nil?  %>
<% @page = 1 %>
<% end %>

<% if @page = 1 and @voicemails.paginator.page_count.to_i > 1 %>
<%= @voicemails.paginator.page %>
| <%= link_to 'First Page', '/voicemails?page=1' %> 
<% end %>

<% if @page.to_i > 1 %>
 | <%= link_to '<< Previous Page', '/voicemails?page=' + (@voicemails.paginator.page - 1).to_s %> 
<% end %>

<% if @page.to_i < @voicemails.paginator.page_count %>
 | <%= link_to 'Next Page >>', '/voicemails?page=' + (@voicemails.paginator.page + 1).to_s %> 
<% end %>

<% if @page.to_i != @voicemails.paginator.page_count and @voicemails.paginator.page_count.to_i > 1 %>
 | <%= link_to 'Last Page', '/voicemails?page=' + @voicemails.paginator.page_count.to_s %> 
<% end %>
</p>